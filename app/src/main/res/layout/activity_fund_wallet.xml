<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#424242"
    android:id="@+id/fundaccountmain"
    tools:context="app.fxfalcons.com.FundWalletActivity">

    <include layout="@layout/app_bar_layout" android:id="@+id/fund_bar"/>

    <EditText
        android:id="@+id/fundAmount"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:background="@drawable/edittext_drawable_bg"
        android:hint="Amount in USD"
        android:inputType="number"
        android:maxEms="6"
        android:maxLength="6"
        android:paddingVertical="10dp"
        android:textAlignment="center"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/confirmationtv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="226dp"
        android:layout_marginHorizontal="40dp"
        android:textAlignment="center"
        android:textColor="#fff"
        android:textSize="16sp" />


    <CheckBox
        android:id="@+id/proceedCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="108dp"
        android:backgroundTint="#fff"
        android:buttonTint="#fff"
        android:text="Yes, i do"
        android:textColor="#fff"
        android:textColorHint="#fff" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/confirm_purchase"
        android:background="@drawable/rounded_button"
        android:paddingHorizontal="30dp"
        android:layout_marginBottom="20dp"
        android:text="Confirm payment"
        android:textColor="#fff"
        android:textStyle="bold" />

</RelativeLayout>
